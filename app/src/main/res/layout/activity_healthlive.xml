<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farifam.lovecalculator.HealthliveActivity">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                style="@android:style/TextAppearance.Holo.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/top_title"
                android:textAlignment="center"
                android:textColor="#135e01"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/cardiogram" />

            <TextView
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_description"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark" />


            <TextView
                android:id="@+id/text_label_distance"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="3"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_insctuction"
                android:textAlignment="center"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/res"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/blackcolor"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/res_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your total step is "
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/res_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="1898"
                    android:textColor="#ffffff"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/res_residu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kamu butuh 8102 langkah lagi untuk mencapai 10.000!"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/start" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
